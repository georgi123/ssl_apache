> openssl x509 -in ssl/testingcert.crt -noout -enddate
notAfter=Dec 30 11:10:42 2013 GMT
> openssl req -new -key ssl/testingcert.key -out ssl/new.csr
> openssl genrsa -out ssl/testingcert.key 2048

